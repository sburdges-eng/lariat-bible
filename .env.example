# Environment Configuration for The Lariat Bible
# Copy this file to .env and fill in your values

# Flask Environment (development, testing, staging, production)
FLASK_ENV=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///lariat_bible.db
# For PostgreSQL: postgresql://username:password@localhost/lariat_bible
# For MySQL: mysql://username:password@localhost/lariat_bible

# File Uploads
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lariat_bible.log

# Redis (for staging/production)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@lariat-bible.com
ADMIN_EMAIL=admin@lariat-bible.com

# Optional: External API Keys
# OCR_API_KEY=your-ocr-api-key
# OPENAI_API_KEY=your-openai-key
