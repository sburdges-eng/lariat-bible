{
  "name": "lariat-bible",
  "version": "1.0.0",
  "description": "The Lariat Bible - Restaurant Recipe Costing System",
  "main": "main.js",
  "author": {
    "name": "The Lariat",
    "email": "info@thelariat.com"
  },
  "homepage": "https://thelariat.com",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:react && electron-builder",
    "build:react": "cd ../frontend && npm run build && cp -r dist ../desktop/app",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.thelariat.bible",
    "productName": "The Lariat Bible",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "app/**/*",
      "assets/**/*",
      "python/**/*"
    ],
    "extraResources": [
      {
        "from": "../api",
        "to": "api",
        "filter": ["**/*"]
      },
      {
        "from": "../modules",
        "to": "modules",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage"],
      "category": "Office",
      "maintainer": "The Lariat <info@thelariat.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
